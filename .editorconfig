# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

# Markdown Files
[*.md]
trim_trailing_whitespace = false

# Shell Files
[*.sh]
indent_size = 2
indent_style = space
end_of_line = lf

# YAML Files
[*.{yml,yaml}]
indent_size = 2

# JSON Files
[*.{json,json5,webmanifest}]
indent_size = 2
